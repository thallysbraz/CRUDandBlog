<div class="container">
  <hr />
  <div class="card">
    <div class="card-header">
      <h2>Editar titulo</h2>
    </div>
    <div class="card-body">
      <form method="POST" action="/categories/categories/update">
        <input
          class="form-control"
          type="text"
          name="title"
          value="<%= category.title %>"
          required
        />
        <button class="btn btn-success" type="submit" style="margin-top: 5px;">
          Atualizar
        </button>
      </form>
    </div>
  </div>
</div>

